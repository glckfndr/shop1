<h1> Product Table</h1>
<%= link_to 'Create New Product', new_product_path %>

<table id='product_table' class="minimal-table">
  <%= thead_tag %w[# Товар Опис Ціна Кількість Дія] %>
  <tbody>
    <% @products.each do |product|   %>
      <tr>
        <%= row_tag(product, :id, :name, :description, :price, :balance) %>
        <td>
          <%= link_to 'Show', product_path(product) %>
          <%= link_to 'Edit', edit_product_path(product) %>
          <%= link_to 'Destroy', product_path(product), data: {  turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

